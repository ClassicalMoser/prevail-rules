{
  "name": "@classicalmoser/prevail-rules",
  "type": "module",
  "version": "0.0.1",
  "description": "Rules for the web-based board game Prevail: Ancient Battles",
  "author": "ClassicalMoser",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClassicalMoser/prevail-rules.git"
  },
  "keywords": [
    "prevail",
    "ancient-battles",
    "board-game",
    "rules",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./commands": {
      "types": "./dist/commands/index.d.ts",
      "import": "./dist/commands/index.js",
      "require": "./dist/commands/index.js"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "import": "./dist/entities/index.js",
      "require": "./dist/entities/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js",
      "require": "./dist/contracts/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "validate": "npm run lint:fix && npm run format && npm run typecheck",
    "version:patch": "tsx scripts/version-bump.ts patch",
    "version:minor": "tsx scripts/version-bump.ts minor"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "4.0.13"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
