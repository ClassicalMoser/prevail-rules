{
  "name": "@classicalmoser/prevail-rules",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.7.0",
  "description": "Rules for the web-based board game Prevail: Ancient Battles",
  "author": "ClassicalMoser",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClassicalMoser/prevail-rules.git"
  },
  "keywords": [
    "prevail",
    "ancient-battles",
    "board-game",
    "rules",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./domain": {
      "types": "./dist/domain/index.d.ts",
      "import": "./dist/domain/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:eslint-rule": "vitest run --config eslint-rules/vitest.config.ts",
    "test:mutation": "stryker run",
    "typecheck": "tsc --noEmit",
    "build": "tsdown",
    "build:eslint-rule": "tsdown --config eslint-rules/tsdown.config.ts && mv eslint-rules/eslint-plugin-import-boundaries.mjs eslint-rules/eslint-plugin-import-boundaries.js 2>/dev/null || true",
    "prepublishOnly": "npm run build",
    "validate": "npm run lint:fix && npm run format && npm run typecheck",
    "version:patch": "tsx scripts/version-bump.ts patch",
    "version:minor": "tsx scripts/version-bump.ts minor"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@rolldown/binding-darwin-x64": "1.0.0-rc.1",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-boundaries": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.8.1",
    "tsdown": "0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "volta": {
    "node": "20.20.0",
    "pnpm": "9.7.0"
  }
}
