{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@entities": ["src/domain/entities/index"],
      "@entities/*": ["src/domain/entities/*"],
      "@queries": ["src/domain/queries/index"],
      "@queries/*": ["src/domain/queries/*"],
      "@transformers": ["src/domain/transformers/index"],
      "@transformers/*": ["src/domain/transformers/*"],
      "@events": ["src/domain/events/index"],
      "@events/*": ["src/domain/events/*"],
      "@contracts": ["./src/contracts/index"],
      "@contracts/*": ["./src/contracts/*"],
      "@testing": ["./src/domain/testing/index"],
      "@testing/*": ["./src/domain/testing/*"],
      "@utils": ["./src/domain/utils/index"],
      "@utils/*": ["./src/domain/utils/*"],
      "@validation": ["./src/domain/validation/index"],
      "@validation/*": ["./src/domain/validation/*"],
      "@sampleValues": ["./src/domain/sampleValues/index"],
      "@sampleValues/*": ["./src/domain/sampleValues/*"]
    },
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
