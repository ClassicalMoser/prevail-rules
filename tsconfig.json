{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@entities": ["./src/entities/index"],
      "@entities/*": ["./src/entities/*"],
      "@functions": ["./src/functions/index"],
      "@functions/*": ["./src/functions/*"],
      "@commands": ["./src/commands/index"],
      "@commands/*": ["./src/commands/*"],
      "@contracts": ["./src/contracts/index"],
      "@contracts/*": ["./src/contracts/*"],
      "@testing": ["./src/testing/index"],
      "@testing/*": ["./src/testing/*"],
      "@utils": ["./src/utils/index"],
      "@utils/*": ["./src/utils/*"],
      "@validation": ["./src/validation/index"],
      "@validation/*": ["./src/validation/*"],
      "@sampleValues": ["./src/sampleValues/index"],
      "@sampleValues/*": ["./src/sampleValues/*"]
    },
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/domain/example", "src/entities/army"],
  "exclude": ["node_modules"]
}
