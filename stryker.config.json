{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please take a look at: https://stryker-mutator.io/docs/stryker-js/configuration/ for more information.",
  "packageManager": "pnpm",
  "mutate": [
    "src/domain/**/*.{js,ts}",
    "!src/domain/**/*.test.{js,ts}",
    "!dist/**/*.{js,ts}",
    "!src/domain/entities/**/*.{js,ts}",
    "!src/domain/events/**/*.{js,ts}",
    "!src/domain/rules/**/*.{js,ts}",
    "!src/domain/testing/**/*.{js,ts}",
    "!src/domain/sampleValues/**/*.{js,ts}",
    "!**/index.{js,ts}"
  ],
  "reporters": ["html", "clear-text", "progress"],
  "timeoutMS": 5000,
  "concurrency": 2,
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "testRunner": "vitest",
  "ignoreStatic": false,
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "testRunner_comment": "Take a look at https://stryker-mutator.io/docs/stryker-js/vitest-runner for information about the vitest plugin.",
  "coverageAnalysis": "perTest",
  "buildCommand": "pnpm run build",
  "plugins": [
    "@stryker-mutator/vitest-runner",
    "@stryker-mutator/typescript-checker"
  ]
}
